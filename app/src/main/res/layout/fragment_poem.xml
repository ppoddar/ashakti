<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/main_toolbar" />

    <EditText
        android:id="@+id/text_poem"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="@dimen/horizontal_gap"
        android:paddingEnd="@dimen/horizontal_gap"
        android:paddingTop="@dimen/vertical_gap"
        android:paddingBottom="@dimen/vertical_gap"
        android:hint="poem"
        android:scrollbars="vertical"
        android:textSize="@dimen/text_h4"
        android:textIsSelectable="true"
        android:inputType="none"
        android:longClickable="true"
        android:focusable="true"
        tools:ignore="HardcodedText" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"/>
    <ImageButton
        android:id="@+id/navigate_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:visibility="invisible"
        tools:visibility="visible"
        android:src="@drawable/navigate_next"/>

    <!-- made visible if audio is present, invisible otherwise -->
    <!-- appearance is controlled by exo_styled_player_control -->
    <com.google.android.exoplayer2.ui.StyledPlayerControlView
        android:id="@+id/audio_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="invisible"
        app:show_timeout="0"

        tools:visibility="visible"
        app:bar_gravity="center"
        app:show_buffering="when_playing"
        app:show_shuffle_button="false" />


</LinearLayout>