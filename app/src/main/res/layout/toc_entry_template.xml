<?xml version="1.0" encoding="utf-8"?>

<!-- single TOC entry shows both english and bengali title -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toc_entry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:gravity="left"
    android:orientation="vertical"
    android:padding="@dimen/default_padding"

    >

    <TextView
        android:id="@+id/english_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_h4"
        android:textColor="@color/color_0"
        android:textStyle="bold"
        android:hint="english_title"
        android:fontFamily="@font/raleway"
    />
    <TextView
        android:id="@+id/bangla_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_gap"
        android:gravity="left"
        android:textSize="@dimen/text_h5"
        android:textColor="@color/color_0"
        android:textStyle="bold"
        android:hint="বাংলা শিরোনাম"
        android:fontFamily="@font/kalpurush"

        />

</LinearLayout>
