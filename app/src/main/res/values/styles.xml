<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>
    <style name="banglaFont">
        <item name="android:fontFamily">@font/kalpurush</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textSize">18pt</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PoemStyle">
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="banglaTitleStyle" parent="TitleStyle">
        <item name="android:fontFamily">@font/kalpurush</item>
    </style>
    <style name="banglaPoemStyle" parent="PoemStyle">
        <item name="android:fontFamily">@font/kalpurush</item>
    </style>

    <style name="englishPoemStyle" parent="PoemStyle">
        <item name="android:fontFamily">@font/robotoslab_medium</item>
    </style>

    <style name="englishTitleStyle" parent="TitleStyle">
        <item name="android:fontFamily">@font/robotoslab_medium</item>
    </style>


    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="backgroundColor">@color/color_3</item>
        <item name="android:textColor">@color/color_0</item>
    </style>

    <style name="smallButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="backgroundColor">@color/color_0</item>
        <item name="android:textColor">@color/color_3</item>
    </style>


</resources>